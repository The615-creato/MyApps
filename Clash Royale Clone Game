  <!-- small inline behavior to animate the elixir bar as a demo; hook into your game logic for real behavior -->
  <script>
    (function(){
      var elixir = 3;
      var maxElixir = 10;
      var elixirFill = document.getElementById('elixir-fill');
      var elixirValue = document.getElementById('elixir-value');
      // demo: slowly refill elixir
      setInterval(function(){
        if (elixir < maxElixir) elixir += 0.5;
        if (elixir > maxElixir) elixir = maxElixir;
        var pct = (elixir / maxElixir) * 100;
        elixirFill.style.width = pct + '%';
        elixirValue.textContent = Math.floor(elixir);
      }, 1000);
      // clicking the Battle button currently just pulses the arena as a demo
      document.getElementById('start-battle').addEventListener('click', function(){
        var arena = document.getElementById('arena-frame');
        arena.classList.add('arena-pulse');
        setTimeout(function(){ arena.classList.remove('arena-pulse'); }, 350);
      });
    })();
  </script>

